<h1>Login</h1>
<li class = "nav-link">

<%= form_tag '/login' do %>
<div class ="card">
<div class ="card-body">

        
   <div class="mb-3">
  <label class="form-label">email</label>
  <%= text_field_tag :email, "", { class: "form-control" } %>
  </div>      
        
    <div class="mb-3">
  <label class="form-label">password</label>
  <%= password_field_tag :password, "", { class: "form-control" } %>
  </div>      
        
       <%= submit_tag "Submit", class: "btn btn-primary" %> 

</div>
</div>
<% end %>
</li>